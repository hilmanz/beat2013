<div id="theContainer" class="galleryPage">
    <div class="theContainer">
        <div class="head-title">
			<a href="{$basedomain}gallery" class="btnback fl"></a>
            <div class="shorter fr">
            	<select class="styled">
                	<option>Select BA</option>
                	{foreach from=$social key=k item=v}
							{if $v.ftype==1}<option value="{$v.id}" > {$v.name} {$v.last_name} </option>{/if}
					{/foreach}	
                </select>
            </div><!-- /.shorter -->
        </div> <!-- /.head-title -->
        <div class="head-title">
			<h3 class="fl">{$plandata.result[0].title} - {$plandata.result[0].posted_date} @ {$plandata.result[0].brief}</h3>			
            <a href="{$basedomain}gallery/addphoto/{$plandata.result[0].id}" class="button addPhoto fr">Add Photo</a>
        </div> <!-- /.head-title -->
        <div class="theContent">
        	<div class="head-row">
                <a href="#" class="thumbsmall fl"><img src="{$plandata.result[0].author.image_full_path}" /></a><h1 class="fl username">{$plandata.result[0].author.name} {$plandata.result[0].author.last_name}</h1>
            </div>
        	<div class="section">
			 {foreach from=$plandata.result key=k item=v}
            	<div class="col3">
                	<div class="box-gallery">
                    	<div class="imgbox">
                        	<a href="{$basedomain}gallery/shows/{$v.id}" class="thumb-gallery"><img src="{$v.image_full_path}" width="100%" /></a>
                        </div> <!-- /.imgbox -->
                        <div class="gallery-info">
                        	<span class="desc1">{$v.title}</span>       
							<a class="icon-remove theicon" href="#">&nbsp;</a>                     
                        </div> <!-- /.gallery-info -->
                    </div> <!-- /.box-gallery -->
                </div> <!-- /.col3 -->
				{/foreach} 
				{if $acts=='detail'}
					{if $plandata.result[0].gallery}
						{foreach from=$plandata.result[0].gallery key=k item=v}
						<div class="col3">
							<div class="box-gallery">
								<div class="imgbox">
									<a href="{$basedomain}gallery/shows/{$plandata.result[0].id}" class="thumb-gallery"><img src="{$v.image_full_path}" width="100%" /></a>
								</div> <!-- /.imgbox -->
								<div class="gallery-info">
									<span class="desc1">{$v.title} - {$v.created_date}</span>
                          			<a class="icon-remove theicon" href="#">&nbsp;</a>
								</div> <!-- /.gallery-info -->
							</div> <!-- /.box-gallery -->
						</div> <!-- /.col3 -->
						{/foreach}
					{/if}
				
				{/if}
            	{*}
                <div class="paging">
                    <a href="#" class="prev">&laquo;</a>
                    <a href="#">1</a>
                    <a href="#" class="current">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">5</a>
                    <a href="#" class="next">&raquo;</a>
                </div><!-- /.paging -->
				{/*}
            </div> <!-- /.section -->
        </div> <!-- /.theContent -->
    </div> <!-- /.theContainer -->
</div> <!-- /#theContainer -->